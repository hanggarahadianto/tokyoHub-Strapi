{
  "kind": "collectionType",
  "collectionName": "shops",
  "info": {
    "singularName": "shop",
    "pluralName": "shops",
    "displayName": "Shop",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "shop_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shop-category.shop-category",
      "inversedBy": "shops"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "opening_hours": {
      "displayName": "opening_hours",
      "type": "component",
      "repeatable": true,
      "component": "shop.opening-hours"
    },
    "dine_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::dine-category.dine-category",
      "inversedBy": "shops"
    },
    "floor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::floor.floor"
    },
    "unit_no": {
      "type": "string",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": true,
      "component": "shared.seo"
    }
  }
}
